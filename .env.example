# =============================================================================
# REQUIRED: Slack Configuration
# =============================================================================
# Get these from https://api.slack.com/apps > Your App > Basic Information
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# =============================================================================
# REQUIRED: AI Provider (at least one)
# =============================================================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# Get from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Which provider to use by default (openai or anthropic)
DEFAULT_AI_PROVIDER=anthropic

# Maximum tool execution steps per request (default: 15)
# MAX_TOOL_STEPS=15

# =============================================================================
# OPTIONAL: Integration Allowlist
# =============================================================================
# Comma-separated list of integration IDs to enable. Leave empty for all.
# Example: ENABLED_INTEGRATIONS=github,salesforce
# ENABLED_INTEGRATIONS=

# =============================================================================
# OPTIONAL: GitHub Integration
# =============================================================================
# Option 1: Personal Access Token (simplest)
# Get from https://github.com/settings/tokens
# GITHUB_OAUTH_TOKEN=ghp_your_token

# Option 2: OAuth App (for user-level auth)
# Create at https://github.com/settings/developers
# GITHUB_OAUTH_CLIENT_ID=
# GITHUB_OAUTH_CLIENT_SECRET=
# GITHUB_OAUTH_REDIRECT_URI=http://localhost:3999/oauth/github/callback
# GITHUB_OAUTH_SCOPES=repo read:org read:user

# Default repository for queries (optional)
# GITHUB_DEFAULT_OWNER=your-org
# GITHUB_DEFAULT_REPO=your-repo

# GitHub Enterprise Server (optional)
# GITHUB_BASE_URL=https://github.your-company.com/api/v3
# GITHUB_OAUTH_BASE_URL=https://github.your-company.com

# =============================================================================
# OPTIONAL: Salesforce Integration
# =============================================================================
# Create Connected App at Setup > App Manager > New Connected App
# SALESFORCE_CLIENT_ID=
# SALESFORCE_CLIENT_SECRET=
# SALESFORCE_REDIRECT_URI=http://localhost:3999/oauth/salesforce/callback
# SALESFORCE_LOGIN_URL=https://login.salesforce.com

# If you have a refresh token already (skip OAuth flow)
# SALESFORCE_REFRESH_TOKEN=

# =============================================================================
# OPTIONAL: Google Drive Integration
# =============================================================================
# Create credentials at https://console.cloud.google.com/apis/credentials
# GOOGLE_DRIVE_CLIENT_ID=
# GOOGLE_DRIVE_CLIENT_SECRET=
# GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3999/oauth/google-drive/callback

# If you have a refresh token already (skip OAuth flow)
# GOOGLE_DRIVE_REFRESH_TOKEN=

# =============================================================================
# OPTIONAL: OAuth Server Configuration
# =============================================================================
# Base URL for OAuth callbacks (must be accessible from browser)
# OAUTH_BASE_URL=http://localhost:3999
# OAUTH_PORT=3999
# OAUTH_BIND_HOST=127.0.0.1

# Set to true to allow requests from non-localhost (for production)
# OAUTH_ALLOW_REMOTE=false

# Shared secret to protect /oauth/*/start endpoints (recommended for production)
# OAUTH_SHARED_SECRET=

# Set to false to disable the OAuth server entirely
# OAUTH_SERVER_ENABLED=true

# =============================================================================
# OPTIONAL: Daytona Integration (Code Execution)
# =============================================================================
# Daytona provides secure, isolated sandbox environments for code execution.
# Get your API key from https://app.daytona.io/dashboard/keys
# DAYTONA_API_KEY=

# Optional: Custom API URL (default: https://app.daytona.io/api)
# DAYTONA_API_URL=

# Optional: Target region for sandboxes (default: organization default)
# DAYTONA_TARGET=us

# =============================================================================
# OPTIONAL: HubSpot Integration (CRM)
# =============================================================================
# Get from https://developers.hubspot.com/docs/api/private-apps
# HUBSPOT_ACCESS_TOKEN=

# =============================================================================
# OPTIONAL: Pipedrive Integration (CRM)
# =============================================================================
# Get from Settings > Personal Preferences > API
# PIPEDRIVE_API_TOKEN=

# =============================================================================
# OPTIONAL: Notion Integration (Productivity)
# =============================================================================
# Create integration at https://www.notion.so/my-integrations
# NOTION_API_KEY=

# =============================================================================
# OPTIONAL: Linear Integration (Project Management)
# =============================================================================
# Create at Settings > API > Personal API keys
# LINEAR_API_KEY=

# =============================================================================
# OPTIONAL: BigQuery Integration (Data Warehouse)
# =============================================================================
# Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# BIGQUERY_PROJECT_ID=your-project-id

# =============================================================================
# OPTIONAL: Snowflake Integration (Data Warehouse)
# =============================================================================
# SNOWFLAKE_ACCOUNT=your-account.region
# SNOWFLAKE_USERNAME=
# SNOWFLAKE_PASSWORD=
# Or use key-pair auth:
# SNOWFLAKE_PRIVATE_KEY=

# =============================================================================
# OPTIONAL: PostgreSQL Integration (Database)
# =============================================================================
# Option 1: Connection string
# POSTGRESQL_CONNECTION_STRING=postgresql://user:pass@host:5432/db

# Option 2: Individual params
# POSTGRESQL_HOST=localhost
# POSTGRESQL_PORT=5432
# POSTGRESQL_USER=
# POSTGRESQL_PASSWORD=
# POSTGRESQL_DATABASE=

# =============================================================================
# OPTIONAL: Stripe Integration (Payments)
# =============================================================================
# Get from https://dashboard.stripe.com/apikeys
# STRIPE_API_KEY=sk_live_xxx

# =============================================================================
# OPTIONAL: QuickBooks Integration (Accounting)
# =============================================================================
# Create app at https://developer.intuit.com/app/developer/dashboard
# QUICKBOOKS_CLIENT_ID=
# QUICKBOOKS_CLIENT_SECRET=
# QUICKBOOKS_REFRESH_TOKEN=
# QUICKBOOKS_REALM_ID=

# =============================================================================
# OPTIONAL: Shopify Integration (E-commerce)
# =============================================================================
# Create private app in Shopify admin
# SHOPIFY_SHOP_NAME=your-store
# SHOPIFY_ACCESS_TOKEN=

# =============================================================================
# OPTIONAL: Zendesk Integration (Support)
# =============================================================================
# ZENDESK_SUBDOMAIN=your-company
# ZENDESK_EMAIL=admin@company.com
# ZENDESK_API_TOKEN=
# Or use OAuth:
# ZENDESK_OAUTH_TOKEN=

# =============================================================================
# OPTIONAL: BambooHR Integration (HR)
# =============================================================================
# Get from BambooHR > Settings > API Keys
# BAMBOOHR_SUBDOMAIN=your-company
# BAMBOOHR_API_KEY=

# =============================================================================
# OPTIONAL: Greenhouse Integration (Recruiting)
# =============================================================================
# Create at Configure > Dev Center > API Credential Management
# GREENHOUSE_API_KEY=

# =============================================================================
# OPTIONAL: Token Storage (Security)
# =============================================================================
# Path to store OAuth tokens (default: .data/tokens.json)
# TOKEN_STORE_PATH=.data/tokens.json

# IMPORTANT: Set this to encrypt stored tokens (highly recommended!)
# Generate with: openssl rand -base64 32
# TOKEN_STORE_SECRET=
